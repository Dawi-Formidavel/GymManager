{% extends "layout.njk" %}

{% block content%}

<link rel="stylesheet" href="styles.css">

<form class="card" method="POST" action="/instructors">
    <section class="avatar" style="background: url(https://source.unsplash.com/collection/3465564/500x500) no-repeat"></section>
    <section class="details">

        <h3>Novo Professor</h3>

        <div class="item">
            <div>Avatar URL</div>
            <div>
                <input 
                type="url"
                name="avatar_url">
            </div>
        </div>


        <div class="item">
            <div>Intrutor</div>
            <div>
                <input 
                type="text"
                name="name">
            </div>
        </div>

        <div class="item">
            <div>Idade</div>
            <div>21</div>
        </div>

        <div class="item">
            <div>Sexo</div>
            <div>Masculino</div>
        </div>

        <div class="item">
            <div>Acompanhamento</div>
            <div>
                <span>Calistenia</span>
                <span>Corrida</span>
            </div>
        </div>

        <div class="item">
            <div>Cadastrado</div>
            <div>25/06/1999</div>
        </div>

    </section>
</form>

{% endblock %}